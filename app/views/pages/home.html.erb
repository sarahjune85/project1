<!---------------------------pages#home----------------------------->
<h3>Try not to cry. <small class="text-muted">Cry a lot.</small></h3>
<p>Overcome coding obstacles and record your kills.</p>
<br>
<% if notice.present? %>
  <div class="alert alert-success">
    <%= notice %>
  </div>
<% end %>
<div class="nav justify-content-end">
  <h2 style="padding-right: 20px;"><%= @current_user.name %>'s boards</h2>
</div>
<div class="container flex-column p-2"  style="padding-left: 10px;">
  <% @boards.in_groups_of(3, false).each do |group| %>
    <div class="row offset-sm-0">
      <% group.each do |board| %>
        <div class="p-2 col-sm">
          <div class="card text-dark bg-light mb-3 text-center" style="width: 18rem; height: 19rem;">
            <div class="card-header h3" style='background-color: #4ECCA3;
    color: #fff; border-radius: 10 px 10 px 0 px 0 px;'><%= board.name %></div>
            <div class="card-body flex-column" style='background-color: #EEEEEE;
    color: #232931;'>
              <p>Board ID: <%= board.id %></p>
              <%= image_tag board.image, :style =>"max-width: 200px; height: 90px;" if board.image.present? %>
              <br>
              <br>
              <p><%= board.description.truncate(30) %></p>
            </div>
            <div class="btn-group btn-group-sm" role="group">
              <%= link_to 'Show board', board, :class =>"btn", :style =>"background-color: #393E46;
    color: white;"%>
              <%= link_to 'Edit', edit_board_path(board), :class =>"btn btn-dark", :style =>"background-color: #393E46;
    color: white;"%>
              <%= link_to 'Delete board', board, method: :delete, data: { confirm: 'Are you sure? This will remove all lists inside!' }, :class =>"btn", :style =>"background-color: #393E46;
    color: white;"%>
            </div>
          </div>
        </div>
      <% end %>
      <% (3 - group.length).times.each do |fake_div| %>
        <div class="p-2 col-sm">
          <div class="card text-dark bg-light mb-3 text-center" style="width: 18rem; height: 19rem;">
            <div class="card-body flex-column" style='background-color: #334756; color: #fff;'>
              <p style="margin: 0 auto;">Fill me!</p>
              <%= image_tag 'tear.png', :style =>"max-width: 200px; height: 90px;"%>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
