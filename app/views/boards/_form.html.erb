<div class="form-group">
  <%= form_with(model: board) do |form| %>
    <div class="field">
      <%= form.label :name%>
      <%= form.text_field :name, :class => 'form-control'%>
    </div>
    <div class="field">
      <%= form.label :image%>
      <%= form.text_field :image, :class => 'form-control'%>
    </div>
    <div class="field">
      <%= form.label :description%>
      <%= form.text_area :description, size: "70x5", :class => 'form-control' %>
    </div>
    <p>
      <div class="actions">
        <%= form.submit 'Create/update board', :class => 'btn btn-info' %>
      </div>
    </p>
  <% end %>
</div>
