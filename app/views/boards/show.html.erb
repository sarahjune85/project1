<p id="notice"><%= notice %></p>
<!---------------------- THIS PAGE IN USE ----------------------------------->
<div class="container">
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <span class="h2"><%= @board.name %>, Board: <%= @board.id %></span>
  </nav>
</div>
<div class="container">
  <div class="row">
    <% @board.lists.each do |list| %>
      <div class="col-sm">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= list.name %></h5>
            <p class="card-text"><%= list.description %></p>
            <div class="btn-group btn-group-sm" role="group" aria-label="Basic example">
              <%= link_to 'Show list', board_lists_path(@board.id), :class =>"btn btn-info" %>
              <%= link_to 'Edit', edit_board_list_path(list), :class => "btn btn-info"  %>
              <%= link_to 'Delete', [:board, list], method: :delete, data: { confirm: 'Are you sure? This will remove all lists inside!' }, :class => "btn btn-info"  %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<div class="nav">
  <!--CREATE A NEW LIST THROUGH BOARD ROUTE YAAY -->
  <%= link_to "New List (Debug)", new_board_list_path(@board.id), :class => "navbar-brand nav-link active" %>
</div>
